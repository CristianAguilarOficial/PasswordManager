<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PasswordManager.ViewModels"
        x:Class="PasswordManager.Views.MainWindow"
        Title="Password Manager"
        Width="1000" Height="700"
        WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="600">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Contenido principal -->
        <DockPanel Grid.Row="0">
            <!-- Panel Izquierdo - Lista de entradas -->
            <Border Width="300" 
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    Padding="10" 
                    DockPanel.Dock="Left">
                
                <StackPanel>
                    <!-- Barra de bÃºsqueda -->
                    <TextBox Watermark="Buscar contraseÃ±as..."
                             Text="{Binding SearchText, Mode=TwoWay}"
                             Margin="0,0,0,10" />

                    <!-- Botones de acciÃ³n -->
                    <StackPanel Orientation="Horizontal" 
                                Spacing="5" 
                                Margin="0,0,0,10">
                        <Button Content="âž• Agregar" 
                                Command="{Binding AddEntryCommand}"
                                Classes="accent" />
                        <Button Content="ðŸ’¾ Guardar" 
                                Command="{Binding SaveCommand}" />
                    </StackPanel>

                    <!-- Lista de entradas -->
                    <ListBox ItemsSource="{Binding Entries}" 
                             SelectedItem="{Binding SelectedEntry, Mode=TwoWay}"
                             Height="500">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Website}" 
                                               FontWeight="Bold" 
                                               FontSize="14" />
                                    <TextBlock Text="{Binding Username}" 
                                               FontSize="12" 
                                               Opacity="0.7" />
                                    <TextBlock Text="{Binding Email}" 
                                               FontSize="11" 
                                               Opacity="0.6" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Panel Derecho - Detalles de la entrada -->
            <ScrollViewer Padding="20">
                <StackPanel IsEnabled="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNotNull}}">
                    
                    <!-- TÃ­tulo -->
                    <TextBlock Text="Detalles de la Entrada" 
                               FontWeight="Bold" 
                               FontSize="18" 
                               Margin="0,0,0,20"/>

                    <!-- Formulario de detalles -->
                    <Grid ColumnDefinitions="120,*" 
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
                          Margin="0,0,0,20">
                        
                        <!-- Sitio Web -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Sitio web:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,10"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding SelectedEntry.Website, Mode=TwoWay}" 
                                 Margin="0,0,0,10"/>

                        <!-- URL -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="URL:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,10"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding SelectedEntry.Url, Mode=TwoWay}" 
                                 Margin="0,0,0,10"/>

                        <!-- Usuario -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Usuario:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,10"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding SelectedEntry.Username, Mode=TwoWay}" 
                                 Margin="0,0,0,10"/>

                        <!-- Email -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Email:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,10"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding SelectedEntry.Email, Mode=TwoWay}" 
                                 Margin="0,0,0,10"/>

                        <!-- ContraseÃ±a -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="ContraseÃ±a:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,10"/>
                        <Grid Grid.Row="4" Grid.Column="1" 
                              ColumnDefinitions="*,Auto" 
                              Margin="0,0,0,10">
                            <TextBox Grid.Column="0"
                                     Text="{Binding SelectedEntry.Password, Mode=TwoWay}" 
                                     PasswordChar="â—"
                                     RevealPassword="True"
                                     Margin="0,0,5,0"/>
                            <Button Grid.Column="1"
                                    Content="ðŸŽ²"
                                    ToolTip.Tip="Generar contraseÃ±a aleatoria"
                                    Command="{Binding GeneratePasswordCommand}"
                                    Width="30" Height="30"/>
                        </Grid>

                        <!-- Notas -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                   Text="Notas:" 
                                   VerticalAlignment="Top"
                                   Margin="0,5,10,10"/>
                        <TextBox Grid.Row="5" Grid.Column="1" 
                                 Text="{Binding SelectedEntry.Notes, Mode=TwoWay}" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap"
                                 Height="80" 
                                 Margin="0,0,0,10"/>
                    </Grid>

                    <!-- Botones de acciÃ³n -->
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10" 
                                Margin="0,10,0,0">
                        <Button Content="ðŸ’¾ Guardar Cambios" 
                                Command="{Binding SaveCommand}"
                                Classes="accent" />
                        <Button Content="ðŸ—‘ï¸ Eliminar" 
                                Command="{Binding DeleteEntryCommand}"
                                Classes="danger" />
                        <Button Content="ðŸ“‹ Copiar ContraseÃ±a" 
                                Click="CopyPasswordButton_Click"
                                IsEnabled="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNotNull}}" />
                        <Button Content="ðŸŒ Abrir URL" 
                                Click="OpenUrlButton_Click"
                                IsEnabled="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNotNull}}" />
                    </StackPanel>

                    <!-- InformaciÃ³n de la entrada -->
                    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            Padding="10"
                            Margin="0,20,0,0"
                            CornerRadius="5"
                            IsVisible="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel>
                            <TextBlock Text="InformaciÃ³n de la Entrada" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock>
                                <Run Text="ID: " FontWeight="Bold"/>
                                <Run Text="{Binding SelectedEntry.Id}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Mensaje cuando no hay entrada seleccionada -->
                    <StackPanel IsVisible="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNull}}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="0,50,0,0">
                        <TextBlock Text="ðŸ”" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.5" />
                        <TextBlock Text="Selecciona una entrada de la lista para ver sus detalles" 
                                   FontSize="16" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.7"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,10,0,0" />
                        <TextBlock Text="O crea una nueva entrada usando el botÃ³n âž• Agregar" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.5"
                                   TextAlignment="Center"
                                   Margin="0,5,0,0" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>

        <!-- Barra de estado -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="10,5">
            <DockPanel>
                <TextBlock Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding Entries.Count, StringFormat='Entradas: {0}'}" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center" />
            </DockPanel>
        </Border>
    </Grid>

    <Window.Styles>
        <!-- Estilos personalizados -->
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="#0078D4" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#D13438" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        
        <Style Selector="Button.accent:pointerover">
            <Setter Property="Background" Value="#106EBE" />
        </Style>
        
        <Style Selector="Button.danger:pointerover">
            <Setter Property="Background" Value="#B71C1C" />
        </Style>
    </Window.Styles>
</Window>